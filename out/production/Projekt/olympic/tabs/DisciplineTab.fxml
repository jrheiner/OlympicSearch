<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<GridPane xmlns:fx="http://javafx.com/fxml/1" GridPane.rowIndex="1"
          xmlns="http://javafx.com/javafx/10.0.2-internal" fx:controller="olympic.ui.DisciplineTabController">
    <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="300.0" prefWidth="450.0"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
    </rowConstraints>
    <GridPane>
        <columnConstraints>
            <ColumnConstraints hgrow="ALWAYS" minWidth="250.0" prefWidth="450.0"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints maxHeight="60.0" minHeight="40.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="300.0" prefHeight="300.0" vgrow="SOMETIMES"/>
        </rowConstraints>
        <GridPane.margin>
            <Insets bottom="10.0" left="15.0" right="5.0"/>
        </GridPane.margin>
        <GridPane>
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="150.0" prefWidth="200.0"/>
                <ColumnConstraints hgrow="SOMETIMES" maxWidth="80.0" minWidth="80.0" prefWidth="80.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="40.0" prefHeight="40.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <Button fx:id="disciplineSearchButton" mnemonicParsing="false" text="Search"
                    GridPane.columnIndex="1">
                <GridPane.margin>
                    <Insets left="15.0"/>
                </GridPane.margin>
            </Button>
            <TextField fx:id="disciplineSearchInput" promptText="Search for a discipline">
                <GridPane.margin>
                    <Insets left="20.0" right="20"/>
                </GridPane.margin>
            </TextField>
        </GridPane>
        <ListView fx:id="disciplineResultsListView" GridPane.rowIndex="1">
            <padding>
                <Insets bottom="3" left="3" right="2" top="3"/>
            </padding>
            <GridPane.margin>
                <Insets/>
            </GridPane.margin>
        </ListView>
    </GridPane>
</GridPane>
